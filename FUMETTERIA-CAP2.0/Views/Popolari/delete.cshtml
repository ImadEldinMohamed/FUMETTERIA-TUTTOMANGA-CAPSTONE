@model FUMETTERIA_CAP2._0.Models.Popolare

@{
    ViewBag.Title = "delete";
}

<h2 class="text-center bold-text">ELIMINA PERSONAGGIO</h2>

<h3 class="text-center bold-text">sei sicuro di voler eliminare il personaggio?</h3>
<div>
  
    <dl class="dl-horizontal px-2 card color">
        <dt>
            <span class="bold-text">@Html.DisplayNameFor(model => model.nome)</span>  
        </dt>

        <dd>
            <span class="bold-text">@Html.DisplayFor(model => model.nome)</span> 
        </dd>

        <dt>
            <span class="bold-text">@Html.DisplayNameFor(model => model.foto)</span>  
        </dt>

        <dd>
            <img src="~/Content/img/@Model.foto" alt="Immagine del Manga" class="img-fluid rounded-start " style="width:10%">
        </dd>

        <dt>
            <span class="bold-text">@Html.DisplayNameFor(model => model.descrizione)</span> 
        </dt>

        <dd>
            <span class="bold-text">@Html.DisplayFor(model => model.descrizione)</span> 
        </dd>

        <dt>
            <span class="bold-text">@Html.DisplayNameFor(model => model.serie)</span>  
        </dt>

        <dd>
            <span class="bold-text">@Html.DisplayFor(model => model.serie)</span> 
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Elimina" class="btn btn-primary" /> |
            @Html.ActionLink("Ritorna alla lista", "Index")
        </div>
    }
</div>
