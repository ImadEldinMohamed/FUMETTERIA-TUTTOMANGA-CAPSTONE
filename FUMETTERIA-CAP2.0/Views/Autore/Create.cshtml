@model FUMETTERIA_CAP2._0.Models.Autore

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center bold-text ">AGGIUNGI AUTORE</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal card color px-2">
     
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2 bold-text " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descrizione, htmlAttributes: new { @class = "control-label col-md-2 bold-text " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descrizione, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiungi autore" class="btn btn-primary my-2 " />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("LISTA AUTORI", "Index", "Autore", null, new { @class = "text-primary bold-text " })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
