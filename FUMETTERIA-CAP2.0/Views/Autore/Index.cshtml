@model IEnumerable<FUMETTERIA_CAP2._0.Models.Autore>

@{
    ViewBag.Title = "Index";
}

<h2 class="bold-text">LISTA AUTORI</h2>

<p>
    @Html.ActionLink("aggiungi autore", "Create", null, new {@class = "text-primary bold-text  " })
</p>
<table class="table  table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descrizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <span class="bold-text card color">@Html.DisplayFor(modelItem => item.nome)</span>
        </td>
        <td>
            <span class="bold-text card color" > @Html.DisplayFor(modelItem => item.descrizione)</span>
        </td>
        <td>
            @Html.ActionLink("modifica", "Edit", new { id = item.IDautore },new { @class = "text-primary bold-text card color " }) |
          
            @Html.ActionLink("elimina", "Delete", new { id=item.IDautore, }, new { @class = "text-primary bold-text card color " })
        </td>
    </tr>
}

</table>
