@model FUMETTERIA_CAP2._0.Models.Manga

@{
    ViewBag.Title = "Create";
}

<h2 class="bold-text text-center" >AGGIUNGI UN NUOVO MANGA</h2>


@using (Html.BeginForm("Create", "Manga", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal px-2 card color">
    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ">
            @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2 bold-text" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.foto, htmlAttributes: new { @class = "control-label col-md-2 bold-text" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.foto, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                @Html.ValidationMessageFor(model => model.foto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.prezzo, htmlAttributes: new { @class = "control-label col-md-2 bold-text" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.prezzo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.prezzo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descrizione, htmlAttributes: new { @class = "control-label col-md-2 bold-text" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descrizione, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDgenere, "IDgenere", htmlAttributes: new { @class = "control-label col-md-2 bold-text" })
            <div class="col-md-10">
                @Html.DropDownList("IDgenere", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDgenere, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDautore, "IDautore", htmlAttributes: new { @class = "control-label col-md-2 bold-text" })
            <div class="col-md-10">
                @Html.DropDownList("IDautore", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDautore, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiungi manga" class="btn btn-primary my-2" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("LISTA MANGA", "Index", "Manga", null, new { @class = "text-primary bold-text mt-2 " })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
