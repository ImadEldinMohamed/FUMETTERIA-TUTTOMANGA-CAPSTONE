    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Elimina" class="btn btn-primary " /> |
            @Html.ActionLink("RITORNA ALLA LISTA", "Index")
